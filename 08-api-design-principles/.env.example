# API Design Principles Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_VERSION=1.0.0
API_BASE_URL=http://localhost:3000/api
API_TITLE=RESTful API Demo
API_DESCRIPTION=Comprehensive API demonstrating REST principles

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Request Limits
MAX_REQUEST_SIZE=10485760
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=10

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_REQUESTS=true
LOG_RESPONSES=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Database Configuration (if using real database)
DATABASE_URL=postgresql://username:password@localhost:5432/api_demo
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for caching, rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=api_demo:

# Authentication (if implementing auth)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_ISSUER=api-demo

# External Services
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_URL=https://api.external-service.com

# Monitoring and Analytics
ANALYTICS_ENABLED=false
MONITORING_ENABLED=false
ERROR_TRACKING_DSN=

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_BULK_OPERATIONS=true
FEATURE_REAL_TIME_UPDATES=false

# Documentation
DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true
POSTMAN_COLLECTION_ENABLED=true
